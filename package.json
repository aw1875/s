{
  "name": "node-search-cli",
  "version": "1.0.0",
  "main": "./dist/src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build:webpack": "webpack --config webpack.config.js",
    "build:pkg": "pkg ./dist/s.js --target node18-linux-x64 --out-dir ./build --no-warnings",
    "build": "yarn clean && yarn build:webpack && yarn build:pkg",
    "clean": "rm -rf ./build",
    "dev": "nodemon -q --exec 'ts-node' ./src/index.ts",
    "prepare": "husky install",
    "setup": "sudo cp ./build/s /usr/local/bin && sudo mkdir -p /etc/s && sudo cp ./config.json /etc/s/"
  },
  "lint-staged": {
    "./*.js": "prettier --write",
    "src/**/*.ts": "eslint"
  },
  "devDependencies": {
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.35.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "chalk": "4.1.2",
    "cheerio": "^1.0.0-rc.12"
  }
}
